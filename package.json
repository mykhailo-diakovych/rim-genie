{
  "name": "rim-genie",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "pg": "^8.18.0",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.18",
      "drizzle-orm": "^0.45.1"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @rim-genie/db db:push",
    "db:studio": "turbo -F @rim-genie/db db:studio",
    "db:generate": "turbo -F @rim-genie/db db:generate",
    "db:migrate": "turbo -F @rim-genie/db db:migrate",
    "db:start": "turbo -F @rim-genie/db db:start",
    "db:watch": "turbo -F @rim-genie/db db:watch",
    "db:stop": "turbo -F @rim-genie/db db:stop",
    "db:down": "turbo -F @rim-genie/db db:down",
    "db:seed": "turbo -F @rim-genie/db db:seed",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@rim-genie/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@rim-genie/config": "workspace:*",
    "@types/node": "catalog:",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.0"
}
